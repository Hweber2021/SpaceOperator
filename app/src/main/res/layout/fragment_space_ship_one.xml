<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B4BA6"
    tools:context=".SpaceShipOneFragment" >

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/GameMasterOne"
        android:name="com.cci.spaceoperators.GameMasterFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_game_master" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="359dp"
        android:background="#E4E4E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent">

        <RadioGroup
            android:layout_width="133dp"
            android:layout_height="193dp"
            android:layout_marginTop="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioBtnFreeze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refroidir" />

            <RadioButton
                android:id="@+id/radioBtnLightup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RÃ©chauffer" />

            <RadioButton
                android:id="@+id/radioBtnShutoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Eteindre"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/radioBtnStartup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allumer" />
        </RadioGroup>

        <Button
            android:id="@+id/btnYellow"
            android:layout_width="51dp"
            android:layout_height="55dp"
            android:layout_marginTop="124dp"
            android:backgroundTint="#F8E432"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnGreen"
            android:layout_width="51dp"
            android:layout_height="55dp"
            android:layout_marginTop="124dp"
            android:backgroundTint="#8BC34A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.744"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnRed"
            android:layout_width="51dp"
            android:layout_height="55dp"
            android:layout_marginTop="124dp"
            android:backgroundTint="#F44336"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnRightNav"
            android:layout_width="149dp"
            android:layout_height="54dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/space_mono"
            android:text="droite"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnLeftNav"
            android:layout_width="150dp"
            android:layout_height="53dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/space_mono"
            android:text="gauche"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>